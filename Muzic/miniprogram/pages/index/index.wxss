.banner{
    border-radius: 40rpx;
    /* box-shadow:2rpx 20rpx 40rpx #000; */
    width: 100%;
    height: 300rpx;
}
.banner image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.banner .typeTitle{
    position: absolute;
    bottom: 10rpx;
    right:20rpx;
    z-index:9999;
    background: #fff;
    color: #000;
    border-radius: 10rpx; 
    width: 120rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
}
.navContainer{
    display: flex;
}
.navItem{
    display: flex;
    flex-direction: column;
    width: 20%;
}
.navItem  .iconfont{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    background: crimson;
    border-radius: 50%;
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 20rpx;
}
 .navItem text{
    font-size: 26rpx;
    text-align: center;
}
.recommendContainer{
    padding: 10rpx;
}
.recommendContainer .header .title{
    font-size: 40rpx;
}
.recommendContainer .header .more{
    float: right;
    padding: 10rpx 20rpx;
    border: 1rpx solid #000;
    border-radius: 20rpx;
    font-size: 25rpx;
}
.recommendScroll{
    display: flex;
}
.scrollItem{
    width:200rpx;
    height: 500rpx;
    margin:8rpx 10rpx;
}
.scrollItem image{
    width: 200rpx;
    height: 230rpx;
}
.scrollItem text{
    font-size: 30rpx;
    /* 单行文本溢出 */
    /* white-space: nowrap; */
    /* overflow: hidden;
    text-overflow: ellipsis;
    display: block; */
    /* 多行文本溢出隐藏 */
    overflow: hidden; 
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}