<view class="container">
    <!-- 轮播图 -->
    <swiper class="banner" indicator-dots="true" indicator-color="ivory" indicator-active-color="#E34343" circular easing-function="easeInOutCubic" interval="3000" duration="1000" >
        <swiper-item wx:for="{{bannerList}}" wx:key="targetId">
           <image src="{{item.imageUrl}}"></image>
           <text class="typeTitle">{{item.typeTitle}}</text>
        </swiper-item>
    </swiper>
    <!-- 轮播图end -->
    <!-- 导航栏 -->
    <view class="navContainer">
        <view class="navItem">
            <text class="iconfont iconmeirituijian"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconmugedan"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconpaihangbang"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icondiantaiyinpinzhibozhong"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconicon-rgb_smv"></text>
            <text>最新MV</text>
        </view>
    </view>
    <!-- 导航栏 -->
    <!-- 推荐歌曲 -->
    <view class="recommendContainer">
        <view class="header">
            <text class="title">推荐歌单</text>
            <view>
                <text>今日最新推荐</text>
                <text class="more">查看更多>></text>
                
            </view>
        </view>
        <scroll-view class="recommendScroll" enable-flex="true" scroll-x="true">
            <view class="scrollItem" wx:for="{{recommendList}}">
                <image src="{{item.picUrl}}"></image>
                <text>{{item.name}}</text>
            </view>
        </scroll-view>
    </view>
    <!-- 推荐歌曲 -->
</view>
