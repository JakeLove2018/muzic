<view class="container">
    <!-- 轮播图 -->
    <swiper class="banner" indicator-dots="true" indicator-color="ivory" indicator-active-color="#E34343" circular
        easing-function="easeInOutCubic" interval="3000" duration="1000">
        <swiper-item wx:for="{{bannerList}}" wx:key="targetId">
            <image src="{{item.imageUrl}}"></image>
            <text class="typeTitle">{{item.typeTitle}}</text>
        </swiper-item>
    </swiper>
    <!-- 轮播图end -->
    <!-- 导航栏 -->
    <view class="navContainer">
        <view class="navItem">
            <text class="iconfont iconmeirituijian"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconmugedan"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconpaihangbang"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icondiantaiyinpinzhibozhong"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont iconicon-rgb_smv"></text>
            <text>最新MV</text>
        </view>
    </view>
    <!-- 导航栏 -->
    <!-- 推荐歌曲 -->
    <view class="recommendContainer">
        <NavHeader title="今日推荐" nav="今日最新推荐"></NavHeader>
        <scroll-view class="recommendScroll" enable-flex="true" scroll-x="true">
            <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
                <image src="{{item.picUrl}}"></image>
                <text>{{item.name}}</text>
            </view>
        </scroll-view>
    </view>
    <!-- 推荐歌曲 -->
    <!-- 排行榜 -->
    <view class="topList">
        <NavHeader title="排行榜" nav="热歌风向标"></NavHeader>
    </view>
    <swiper class="topListSwiper" next-margin="50rpx">
        <swiper-item wx:for="{{topList}}" wx:key="id">
            <view class="swiperItem">
                <view class="title">{{item.name}}</view>
                <view class="musicItem" wx:for="{{topListSong}}" wx:key="id">
                    <image src="{{item.al.picUrl}}"></image>
                    <text class="count">1</text>
                    <text class="musicName">{{item.name}}</text>
                </view>
            </view>
        </swiper-item>
    </swiper>
    <!-- 排行榜 -->

</view>